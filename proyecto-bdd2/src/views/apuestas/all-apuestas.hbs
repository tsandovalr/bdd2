        <div class="card h-100 ">
            
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/apuestas/edit"><i class="fas fa-user-edit"></i></a>
                    </h4>
                   
                <p>id_apuesta: {{id_apuesta}}</p>
                <p>id_partido: {{id_partido}} bsf <i class="fas fa-money-bill-alt"></i> </p>
                <p>monto_apuesta: {{monto_apuesta}}</p>
                <P>opci√≥n: {{opcion}}</P>
